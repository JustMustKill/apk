int main() {
	// 1) get states
	printChanelStatus(0);
	printChanelStatus(1);
	printChanelStatus(2);

	// 2) get kd
	printChanelKD(0);
	printChanelKD(1);
	printChanelKD(2);

	// 3) print random numbers
	long maxRandom;
	printf("Enter max random number: ");
	scanf("%ld", &maxRandom);
	random(maxRandom);

	// 2) get kd
	printChanelKD(0);
	printChanelKD(1);
	printChanelKD(2);

	// 4) play sound
	doRock();

	return 0;
}
